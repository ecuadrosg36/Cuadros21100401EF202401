<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de Equipos"
            android:textSize="24sp"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editTextTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del equipo"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextTeamURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL del escudo del equipo"
            android:layout_marginBottom="16dp"
            android:inputType="textUri" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonRegisterMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Enfrentamientos"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonListMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listado de Enfrentamientos" />

    </LinearLayout>

</RelativeLayout>
