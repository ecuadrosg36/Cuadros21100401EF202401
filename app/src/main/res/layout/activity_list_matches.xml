<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListMatchesActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listado de Enfrentamientos"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/buttonRegisterTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Equipos"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/buttonRegisterMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Enfrentamientos"
        android:layout_margin="8dp" />

</LinearLayout>
